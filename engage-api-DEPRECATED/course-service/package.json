{
  "name": "course-service",
  "version": "1.0.0",
  "description": "A microservice that stores and provides CRUD routes for the courses, students, and related objects",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "prod": "node dist/app.js",
    "docs": "snowboard html -o docs/index.html docs/api.apib",
    "generate-certs": "openssl req -nodes -new -x509 -keyout server.key -out server.cert"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "mongoose": "^5.7.11",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.5.32",
    "snowboard": "^3.5.4-rc1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1"
  }
}
