#esotera_layout input[type="radio"] {display: none;}
#esotera_layout .inside {overflow: hidden;}
#esotera_layout label {float: left;width: 33%;margin: 0;}
#esotera_layout label span {box-sizing: border-box;display: inline-block;margin-bottom: 7px;margin-right: 7px;border: 5px solid transparent;line-height: 0;transition: .5s all ease-in-out;}
#esotera_layout label span:hover {border-color: #eee;}
label#esotera_layout_default span {display: block;}
label#esotera_layout_default em {display: block;padding: 1.7em 1em;border: 1px solid #ddd;font-weight: bold;text-transform: uppercase;font-style: normal;letter-spacing: 1px;text-align: center;color: #aaa;}
#esotera_layout label input[type="radio"]:checked + span {border-color: #00a0d2;}